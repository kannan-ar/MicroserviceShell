  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.14.0" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="Client\src\app.ts" />
    <TypeScriptCompile Include="Client\src\html.d.ts" />
