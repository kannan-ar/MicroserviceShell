@model List<ClientViewModel>

<table style="border:1px;width:100%">
    <tr>
        <th>Client ID</th>
        <th>Redirect Uri</th>
        <th>Post Logout Redirect Uri</th>
        <th>Allowed Scope</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var client in Model)
    {
        <tr>
            <td>@client.ClientId</td>
            <td>@client.RedirectUri</td>
            <td>@client.PostLogoutRedirectUri</td>
            <td>@client.AllowedScope</td>
            <td><a href="@Url.Action("Details", "Client", new { id = client.ClientId })">Details</a></td>
            <td><a href="@Url.Action("Edit", "Client", new { id = client.ClientId })">Edit</a></td>
            <td><a href="@Url.Action("Clone", "Client", new { id = client.ClientId })">Clone</a></td>
            <td><a href="@Url.Action("Delete", "Client", new { id = client.ClientId })">Delete</a></td>
            <td><a href="@Url.Action("Json", "Client", new { id = client.ClientId })">JSON</a></td>
        </tr>
    }
</table>